<main class="edit">
	<h1 class="edit-title">Editing Book</h1>
	<% if @book.errors.any? %>
		<div id="error_explanation" class="alert alert-danger">
			<ul>
				<% @book.errors.full_messages.each do |message| %>
				 <li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<%= form_for(@book) do |f| %>
		<p>Title</p>
		<%= f.text_field :title %>
		<p>Body</p>
		<%= f.text_area :body %>
		<p class="update"><%= f.submit 'Update Book' %></p>
	<% end %>
	<div>
		<p><%= link_to "Show", book_path(@book, class: "se") %> | <%= link_to "Back", books_path, class: "sb" %></p>
	</div>
</main>